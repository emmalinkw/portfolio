---
import {getEntry} from "astro:content";
import {render} from "astro:content";
import Card from "../../components/Card.astro";
import MasterLayout from "../../layouts/MasterLayout.astro";
import EmploymentHistory from "../../components/Content/EmploymentHistory.astro";
import Technologies from "../../components/Content/Technologies.astro";

const [about] = await Promise.all([
    getEntry('other', 'about/'+Astro.currentLocale),
]);
const {Content: About} = await render(about!);
---
<MasterLayout>
    <Card title="關於">
        <div class="prose">
            <About/>
        </div>
    </Card>
    <Card title="職業履歷">
        <EmploymentHistory />
    </Card>
    <Card title="常用技術">
        <Technologies />
    </Card>
</MasterLayout>
